<header>
  <div class="header-container">
    <a href="/">
      <h1 class="logo">Music ShopðŸŽ¸</h1>
    </a>
  </div>
</header>
<main>
  <h2>Cart</h2>
  <p>
    <a href="/">Return to Store Page</a>
  </p>
  <section id="cart">
    <div class="cart-items">
      {{#each cartItems}}
<!-- TODO: ðŸ‘‡Use a handlebars each helper to loop over cart itemsðŸ‘‡ -->
        <div class="cart-item">
    <!-- replace with inventoryId -->
          <a
            href="/product/{{{this.inventoryId}}}"
            class="cart-item-info">
    <!-- replace with product image -->
            <img src="/images/{{{this.image}}}" alt="{{{this.name}}}" />
            <div>
    <!-- replace with product name and price -->
              <p>{{{this.name}}}</p>
              <p>${{{this.price}}}</p>
            </div>
          </a>
          <div class="cart-item-subtotal">
            <div class="cart-item-controls">
              <label>
                Quantity
<!-- replace with cart id, set max to inventoryQuantity, value to quantity -->
                <input
                  data-cart-id="{{{this.id}}}"
                  type="number"
                  min="0"
                  max="{{{this.inventoryQuantity}}}"
                  value="{{{this.quantity}}}" />
              </label>
              <!-- replace with cart id -->
              <button
                class="remove-from-cart"
                data-cart-id="{{{this.id}}}">
                Remove
              </button>
            </div>
<!-- replace with calculatedPrice -->
            <p>${{{this.calculatedPrice}}}</p>
          </div>
        </div>
        <hr />
        {{/each}}
<!-- TODO: ðŸ‘†Use a handlebars each helper to loop over cart itemsðŸ‘† -->
      <div class="cart-total">
        <p>Total:</p>
<!-- TODO: Replace with cart total -->
        <p>${{{total}}}</p>
      </div>
      <button id="emptyCart">Empty Cart</button>
    </div>
  </section>
</main>
<footer>
  <p>&copy; Music Shop</p>
</footer>